<link rel="stylesheet" href="/Stylesheets2/style.css">
<link rel="stylesheet" href="/Stylesheets2/settings.css">


<div class="settingContainer">
    <div class="customized">
            <div class="profileChange">
                <img class="profilePic" src="<%= path %>" />
            </div>
            <div class="picturesDropDown">
                <form action="/settings/update-avatar" method="POST">
                <input type="radio" id="0" name="picRadio" value="0">
                        <label for="0"><img id="0" class="choice" src="/images/blankProfile.jpeg" >
                    </label>
                    
                        <input type="radio" id="1" name="picRadio" value="1">
                        <label for="1"><img id="1" class="choice" src="/images/Mr._Fresh.jpeg"  >
                    </label>
                    
                        <input type="radio" id="2" name="picRadio" value="2">
                        <label for="2"><img id="2" class="choice" src="/images/pic2.jpg" >
                    </label>
                    
                        <input type="radio" id="3" name="picRadio" value="3">
                        <label for="3"><img id="3"class="choice" src="/images/suitCat.jpg" >
                        </label>
                    <input type="submit" value="post" style="display: none;" >
                <!-- <button type="submit" style="display: none;"></button> -->
                </div>
            </form>


        <form id="change_bio" action="/settings/change-bio" method="POST">
            <label>Bio:</label>
            <textarea name="bio" onchange="submitBio()"><%= bio %></textarea>
        </form>
    </div>

    <div class="information">
        <% if (msg) { %><p style="color:red"><%= msg %></p><% } %>

        <form id="change_user" action="/settings/change-username" method="POST">
            <label>Username:</label>
            <textarea name="userName" onchange="submitUser()"><%= userName %></textarea>
        </form>

        <form id="change_email" action="/settings/change-email" method="POST">
            <label>Email:</label>
            <textarea name="email" onchange="submitEmail()"><%= email %></textarea>
        </form>

        <!-- <form id="change_password" action="/settings/change-password" method="POST">
            <label>Password:</label>
            <textarea name="password" onchange="submitPassword()"><%= //password %></textarea>
        </form> -->
    </div>
</div>
